package org.example;

import java.util.Arrays;

public class JPTV23Task4 {
    public static void main(String[] args) { //точка входа в программу
        int[] array = new int[100]; //Объявляется массив array целых чисел (int[]),
        // состоящий из 100 элементов.
        // Изначально все элементы массива инициализированы нулями.
        for (int i = 0; i < array.length; i++) { //Цикл for, который проходит по всем элементам массива от 0 до 99 (всего 100 итераций).
            // Переменная i используется как индекс массива.
            int randomNumber = (int) (Math.random() * 51) * 2 + 1; //здесь генерируется случайное нечётное число.
            //Math.random() возвращает случайное число от 0.0 до 1.0.
            //Умножение на 51 генерирует случайное число в диапазоне от 0 до 50.9999...
            //Приведение к целому типу (int) отбрасывает дробную часть.
            //Умножение на 2 делает число чётным.
            //Добавление 1 превращает его в нечётное (например, 0 превращается в 1, 2 в 3 и т.д.).
            array[i] = randomNumber; //Случайное нечётное число сохраняется в массиве array на позиции с индексом i.
        }
        for (int i = 0; i < array.length; i++) { //Второй цикл for, который проходит по всем элементам массива для их вывода.
            System.out.print(array[i] + " "); //Выводит текущее значение массива (элемент с индексом i) с пробелом.
            if ((i + 1) % 10 == 0) { //Каждые 10 элементов (когда (i + 1) % 10 == 0, например, при i = 9, 19, 29, ...)
                // выводится новая строка для более удобного отображения массива по 10 элементов в строке.
                System.out.println();
            }
        }
        Arrays.sort(array); //Метод Arrays.sort() сортирует массив array по возрастанию.
        double sum = 0; //Объявляется переменная sum типа double, которая будет хранить сумму всех элементов массива.
        for (int value : array) {
            sum += value; //Используется цикл for-each, который проходит по каждому элементу массива (value), и добавляет его значение к переменной sum.
        }
        double average = sum / array.length; //Вычисляется среднее арифметическое массива.
        // Для этого общая сумма всех элементов делится на количество элементов в массиве (array.length = 100).
        System.out.println("\nОтсортированный массив:"); //строка с текстом /н отвечает за начинания новой строки
        for (int i = 0; i < array.length; i++) {
            System.out.print(array[i] + " ");
            if ((i + 1) % 10 == 0) {
                System.out.println(); //Цикл вывода отсортированного массива:
                //Этот цикл аналогичен предыдущему, где массив выводился по 10 элементов в строке, но теперь уже сортированный массив.
            }
        }
        System.out.println("\nСреднее арифметическое: " + average); //Выводится строка с текстом "Среднее арифметическое" и значением переменной average, которая содержит среднее арифметическое массива.
    }
}
